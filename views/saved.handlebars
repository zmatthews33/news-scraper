<section class="hero is-info">
    <div class="hero-body">
        <div class="container">
            <div class="box dropdown is-pulled-right">
                <ul>
                    <li><a class="navbar-item" href="/">Home</a></li>
                    <li><a id="saved" class="navbar-item" href="/saved">Saved Articles</a></li>
                </ul>
            </div>
            <h1 id="hero-title" class="title">
                News Scraper
            </h1>
            <h2 class="subtitle">
                NPR News
            </h2>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <h1 class="title">Saved Articles</h1>
        <div class="container">
            {{#each article}}
            <div class="card">
                <h3 class="card-header">{{this.title}}</h3>
                <div class="row">
                    <div class="col-lg-8 card-block">
                        <p class="card-text">{{this.summary}}</p>
                        <a href="{{this.link}}" target="_blank" class="card-link">Read more</a>
                    </div>
                    <div class="col-lg-4 align-self-end text-right">
                        {{#if saved}}
                        <button class="btn btn-secondary m-2 disabled">Article Saved</button>
                        {{else}}
                        <button class="btn btn-success m-2 btn-save" data-id="{{this._id}}">Save Article</button>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<div class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p id="comments-header" class="modal-card-title">
                {{!-- Modal header text dynamically rendered --}}
            </p>
            <button class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <div id="comments-list">
                <p>Write the first comment for this article.</p>
            </div>
            <hr>
            <div>
                <textarea id="new-comment-field"></textarea>
            </div>
        </section>
        <footer class="modal-card-foot">
            {{!-- Save comment button dynamically rendered to include data-id attribute of article--}}
        </footer>
    </div>
</div>

<script src="/assets/js/saved.js"></script>